<phpdox xmlns="http://phpdox.net/config">
		<project name="phpDox" source="app" workdir="phpdox">
				<collector publiconly="false">
						<include mask="*.php" />
						<exclude mask="*Autoload.php" />
						<exclude mask="*/Plugin/**" />
						<exclude mask="Lib/**" />
				</collector>

				<generator output="${basedir}/api/docs">
						<!--<enrich base="${basedir}/deployment/build/logs">-->
						<enrich base="${basedir}/logs/">
								<source type="build" />

								<source type="git">
										<history enabled="true" limit="15" />
								</source>

								<source type="checkstyle" >
									<file name="checkstyle.xml" />
								</source>

								<source type="pmd" >
									<file name="pmd-cpd.xml" />
								</source>

								<source type="phploc" >
									<file name="phploc.xml" />
								</source>

								<coverage path="coverage/xml" />

						</enrich>

						<build engine="html" enabled="true" output="html">
								<template dir="${phpDox.home}/templates/html" />
								<file extension="xhtml" />
						</build>

						<build engine="xml" enabled="true" output="xml" />

				</generator>
		</project>
</phpdox>
